<h1 class="movie-matches-title col-md-12">Matches for '<%=@keyword%>'</h1>
<div class="">
  <% if current_user && current_user.is_admin?%>
    <%= link_to 'Home', admin_index_path %>
  <% else %>
    <%= link_to 'Home', root_path %>
  <% end %>
</div>
<div class="container">
  <h4><% @movies.each do |movie| %>
    <div class="col-sm-6 list-group">
      <a href="/movies/<%= movie.id %>" class="list-group-item"><img src="<%= movie.poster %>" width="60" height="88" alt="<%= movie.title %>"> <%= movie.title %></a>
    </div>
    <% end %></h4>
</div>

<hr>

<div class="">
  <%= paginate @movies, :theme => 'twitter-bootstrap-3' %>
</div>
